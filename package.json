{
  "name": "ejs-plus",
  "version": "0.0.2",
  "description": "A utility for rendering EJS templates with enhancements.",
  "main": "dist/index.js",
  "module": "index.js",
  "source": "index.js",
  "repository": "https://github.com/chriscalo/ejs-extra.git",
  "author": "Chris Calo <chris.calo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "ava --verbose",
    "test:watch": "ava --watch --verbose",
    "build": "microbundle --target=node --format=cjs",
    "build:watch": "microbundle watch --target=node --format=cjs",
    "dev": "run-p build:watch test:watch"
  },
  "devDependencies": {
    "ava": "^2.3.0",
    "chai": "^4.2.0",
    "esm": "^3.2.25",
    "microbundle": "^0.11.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "caller": "^1.0.1",
    "ejs": "^2.6.2",
    "ejs-lint": "^0.3.0",
    "ez-file": "^0.1.2"
  },
  "ava": {
    "require": [
      "esm"
    ],
    "babel": false,
    "failWithoutAssertions": false
  }
}
